<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_rectangulo_gris_borde_gris">

    <TextView
        android:id="@+id/infoUbication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local de pesca"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/latitud"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/longitud"></TextView>

<TextView
    android:id="@+id/latitud"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Latitud:"
    android:textColor="@color/black"
    android:textSize="14dp"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/longitud"></TextView>

    <TextView
        android:id="@+id/longitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Longitud:"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/latitud"
        app:layout_constraintRight_toRightOf="parent"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>